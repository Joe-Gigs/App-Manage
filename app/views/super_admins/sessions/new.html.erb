<div class="col-md-12 col-sm-12 col-lg-12">
  <div class="col-md-push-4 col-md-4 col-lg-4 col-lg-push-4 col-sm-4 col-sm-push-4 col-xs-12">
    <div id="log_in_form" class="wrapper_login">
      <h2> SUPER ADMIN LOG IN</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', class:'form-control' %>
          </div>
          <div class="field form-group">
            <div class="form_wrapper"><%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class:'form-control' %></div>
          </div>
          <!--COMMENTED OUT REMEMBER FEATURE-->
          <!--<%# if devise_mapping.rememberable? -%>-->
          <!--<div class="field">-->
          <!--<%#= f.check_box :remember_me %>-->
          <!--<%#= f.label :remember_me %>-->
          <!--</div>-->
          <!--<%# end -%>-->
          <div class="actions form-group">
            <div class="login_color"><%= f.submit "Log in", class:'form-control log-in-btn' %></div>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
