<div class="btn-holder">
  <div class="dropdown" id="nav-drop">
    <div class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      <span class="plus-sign">&#43;</span>
        <span class="dropdown-list">
            New App
          </span>
    </div>
    <ul class="dropdown-menu" id='new-app-dropdown' aria-labelledby="newAppDropdown">
      <li><%= render 'partials/new' %></li>
    </ul>
  </div>
</div>
<div class="row render-console">
  <div class="col-md-12 col-lg-12 border" id="console-view">
    <div class="my-apps-pane col-sm-3 col-xs-3 col-md-3 col-lg-3">
      <div class="row">
        <div class="title col-md-12 col-lg-12">
          MY APPS <span class="app_count"><%= j render 'partials/app_count', remote: true %></span>
        </div>
        <div class="content no-pad wbg col-md-12 col-lg-12">
          <!-- RENDER CURRENT USER'S APPS -->
          <%= render 'partials/user_apps' %>
        </div>
      </div>
    </div>
    <div class="app-info-pane col-sm-4 col-xs-4 col-md-4 col-lg-4">
      <div class="row">
        <div class="title col-md-12 col-lg-12">
          APP INFO: <span class="app_name"><%= render 'partials/app_name', remote: true %></span>
        </div>
        <div class="content no-pad col-md-12 col-lg-12">
        </div>
      </div>
    </div>
    <div class="col-md-4 col-lg-4 col-sm-4 col-xs-4 app-info-pane-view">
      <div class="row">
        <div class="title col-md-12 col-lg-12">
        </div>
        <div class="content no-pad wbg col-md-12 col-lg-12">
        </div>
      </div>
    </div>
    <div class="col-md-4 col-lg-4 new-stats-pane">
      <div class="row">
        <div class="title col-md-12 col-lg-12">
          <span class="new_user_pop_up">NEW USER STATS</span>
        </div>

        <span class="new_user_pop_up_show">Snapshot of all your app users to-date and new app users within a specific
          timeframe</span>
        <div class="content no-pad wbg col-md-12 col-lg-12">
        </div>
      </div>
    </div>
    <div class="new-sessions-pane col-md-4 col-lg-4">
      <div class="row">
        <div class="title col-md-12 col-lg-12">
          <span class="app_session_pop_up"> APP SESSIONS</span>
        </div>
        <!--<span class="app_sessions_pop_up_show">Snapshot of your userâ€™s activity to-date and activity within a specific-->
          <!--timeframe</span>-->

        <div class="content no-pad wbg col-md-12 col-lg-12">
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  <% if params[:app] %>
  $(".app_<%= params[:app] %>").click();
  <% end %>
  $('.new-stats-pane .title').on('mouseenter', function () {
    $('.new_user_pop_up_show').css('display','block');
//    $('.new_user_pop_up_show').show()
  }).on('mouseleave', function () {
    $('.new_user_pop_up_show').hide()
  });

  $('.app_session_pop_up').hover(function () {
    $('.app_sessions_pop_up_show').show()
  }, function () {
    $('.app_sessions_pop_up_show').hide()
  });
</script>








