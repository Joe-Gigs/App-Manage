<div class="delete_wrapper">
  <div class="delete">
    <h3>Are you sure you want to delete your application?</h3>
    <h4>Once deleted it will be gone forever.</h4>
  </div>
  <br/>
  <button class='delete-btn btn btn-default form-control' data-toggle='modal' data-target='#confirm-delete-app'>DELETE</button>
</div>

<div class="modal fade" id="confirm-delete-app" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteAppModal" aria-hidden="true">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
      <div class="modal-content">
        <div class="modal-body">
          Are you sure you want to delete<br/>
          <%= @app.app_name %> ?
          <div class="btns">
            <div class="btn btn-lg btn-default cancel-btn" data-dismiss="modal">Cancel</div>
            <%= link_to 'Delete', app_path(@app), method: :delete, class:'btn btn-danger confirm-btn btn-lg', remote: true%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>