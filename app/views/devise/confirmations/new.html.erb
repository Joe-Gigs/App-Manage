<div class="col-md-12 col-sm-12 col-lg-12">
  <div class="col-md-push-4 col-md-4 col-lg-4 col-lg-push-4 col-sm-4 col-sm-push-4 col-xs-12">
    <div id='confirm-form' class="wrapper_login">
      <h2>RESEND CONFIRMATION INSTRUCTIONS</h2>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group">
            <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: 'Email', class: 'form-control' %>
          </div>

          <div class="actions form-group">
            <%= f.submit "Resend confirmation instructions", class: 'form-control sign-up-btn' %>
          </div>
      <% end %>
      <%= link_to "Cancel", new_session_path(resource_name), class: 'form-control btn btn-default log-in-btn' %>
    </div>
  </div>
</div>


