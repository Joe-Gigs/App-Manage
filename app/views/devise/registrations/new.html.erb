<div class="col-md-12 col-sm-12 col-lg-12">
  <div class="col-md-push-4 col-md-4 col-lg-4 col-lg-push-4 col-sm-4 col-sm-push-4 col-xs-12">
    <div id="sign_up_form" class="wrapper_login">
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group">
            <%= f.text_field :fname, autofocus: true, placeholder: 'First Name', value: params[:fname], class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.text_field :lname, autofocus: true, placeholder: 'Last Name', value: params[:lname], class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', value: params[:email], class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.hidden_field :agent, value: params[:agent] %>
          </div>

          <div class="field form-group">
            <% if @minimum_password_length %>
                <% minimum = "(#{@minimum_password_length} characters minimum)" %>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password #{minimum}", class: 'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation', class: 'form-control' %>
          </div>
          <%= f.hidden_field :app_key, value: params[:app] %>
          <div class="actions form-group">
            <%= f.submit "Sign up", class: 'form-control sign-up-btn' %>
          </div>
      <% end %>
      <%= link_to "Cancel", new_session_path(resource_name), class: 'form-control btn btn-default log-in-btn' %>
    </div>
  </div>
</div>
